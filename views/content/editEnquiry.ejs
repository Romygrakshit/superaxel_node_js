                    <% states.forEach((row) => { %>
                    <option value="<%= row.state %>"><%= row.state %></option>
                    <% }); %>
                  </select>
                </div>
                <div class="form-group">
                  <label for="Select">Select Company:</label>
                  <select
                    name="company_id"
                    id="SelectCompany"
                    class="form-control"
                  >
                  <option><%= results[0].company %></option>
                    <% company.forEach((row) => { %>
                    <option value="<%= row.id %>"><%= row.company %></option>
                    <% }); %>
                  </select>
                </div>
                <div class="form-group">
                  <label for="Select">Select Car:</label>
                  <select
                    name="car_id"
                    id="SelectCar"
                    class="form-control"
                  >
                  <option><%= results[0].car_name %></option>
                </select>
                </div>
                <div class="form-group">
                  <label for="SelectAxel" class="col-form-label"
                    >Axel</label
                  >
                  <select name="axel" id="SelectAxel" class="form-control">
                    <option value="<%= results[0].axel %>"><%= results[0].axel %></option>
                    <option value="Right">Right</option>
                    <option value="Left">Left</option>
                    <option value="Both">Both</option>
                  </select>
                </div>

                <div class="form-group">
                  <label for="example-text-input" class="col-form-label"
                    >Coordinates</label
                  >
                  <input
                    class="form-control"
                    type="text"
                    placeholder="Latitude"
                    name="lat"
                    id="example-text-input"
                    value="<%= results[0].lat %>"
                  />
                  <input
                    class="form-control"
                    type="text"
                    placeholder="Longitude"
                    name="lng"
                    id="example-text-input"
                    value="<%= results[0].lng %>"
                  />
                </div>
                <div class="form-group">
                  <label for="example-text-input" class="col-form-label"
