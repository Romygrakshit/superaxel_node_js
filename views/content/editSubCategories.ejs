<div class="main-content-inner">
  <div class="row">
    <div class="col-lg-6 col-ml-12">
      <div class="row">
        <!-- Textual inputs start -->
        <div class="col-12 mt-5">
          <div class="card">
            <div class="card-body">
              <form action="/sub/categories/edit?_method=PUT" method="post">
                <div class="form-group">
                  <h4 class="header-title">
                    Edit SubCategory:<%= subCategory.name %>
                  </h4>
                  <label class="col-form-label">Category Name</label>
                  <input
                    class="form-control"
                    type="text"
                    placeholder="Name"
                    name="name"
                    value="<%= subCategory.name %>"
                    required
                  />
                </div>

                <div class="form-group">
                  <label for="example-text-input" class="col-form-label"
                    >Order Number</label
                  >
                  <input
                    class="form-control"
                    type="number"
                    placeholder="order_number"
                    name="order_number"
                    value="<%= subCategory.order_number %>"
                    required
                  />
                </div>
                <div class="form-group">
                  <label for="example-text-input" class="col-form-label"
                    >Parent Id</label
                  >
                  <input
                    class="form-control"
                    type="number"
                    placeholder="parent_category_id"
                    name="parent_category_id"
                    value="<%= subCategory.parent_category_id %>"
                    required
                  />
                  <input
                    class="form-control"
                    type="hidden"
                    placeholder="order_number"
                    name="id"
                    value="<%= subCategory.id %>"
                  />
                </div>
                <button class="btn btn-primary mb-3">Update Category</button>
              </form>
            </div>
          </div>
        </div>
        <!-- Textual inputs end -->

        <!-- main content area end -->
      </div>
    </div>
  </div>
</div>
