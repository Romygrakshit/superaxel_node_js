<div class="main-content-inner">
  <div class="row">
    <div class="col-lg-6 col-ml-12">
      <div class="row chan">
        <!-- Textual inputs start -->
        <div class="col-12 mt-5">
          <div class="card">
            <div class="card-body">
              <form action="/subAdmins/edit?_method=PUT" method="post">
                <div class="form-group">
                  <h4 class="header-title">
                    Edit SubAdmin: <%= subAdmin.name %>
                  </h4>

                  <label class="col-form-label">Name</label>
                  <input
                    class="form-control"
                    type="text"
                    placeholder="Name"
                    id="example-text-input"
                    name="name"
                    value="<%= subAdmin.name %>"
                    required
                  />
                </div>
                <div class="form-group">
                  <!-- <label for="inputPassword" class="">ID</label> -->
                  <input
                    type="hidden"
                    class="form-control"
                    name="id"
                    value="<%= subAdmin.id %>"
                    required
                  />
                </div>
                <div class="form-group">
                  <label for="Select">Select State:</label>
                  <select name="state" id="Select" class="form-control">
                    <option><%= subAdmin.state %></option>
                    <% states.forEach((row) => { %>
                    <option><%= row.state %></option>

                    <% }); %>
                  </select>
                </div>

                <div class="form-group">
                  <label for="example-tel-input" class="col-form-label"
                    >Mobile Numbers</label
                  >
                  <input
                    class="form-control"
                    type="tel"
                    placeholder="Mobile Number"
                    name="mobile_number"
                    id="example-tel-input"
                    value="<%= subAdmin.mobile_number %>"
                    required
                  />
                  <input
                    class="form-control"
                    type="hidden"
                    placeholder="Mobile Number"
                    name="password"
                    id="example-tel-input"
                    value="<%= subAdmin.password %>"
                    required
                  />
                </div>
                <button class="btn btn-primary mb-3">Save</button>
              </form>
            </div>
          </div>
        </div>
        <!-- Textual inputs end -->
        <!-- Update Password -->
        <div class="col-12 mt-5">
          <div class="card">
            <div class="card-body">
              <h4 class="header-title">
                Update Password for: <%= subAdmin.name %>
              </h4>
              <form action="/subadmins/edit?_method=PUT" method="post">
                <div class="form-group">
                  <label for="exampleInputEmail1">Write New Password:</label>
                  <input
                    type="text"
                    class="form-control"
                    name="Password"
                    placeholder="Password"
                  />
                </div>

                <input
                  class="form-control"
                  type="hidden"
                  placeholder="Email"
                  name="state"
                  value="<%= subAdmin.state %>"
                  id="example-text-input"
                  required
                />

                <input
                  class="form-control"
                  type="hidden"
                  placeholder="Mobile Number"
                  name="mobile_number"
                  id="example-tel-input"
                  value="<%= subAdmin.mobile_number %>"
                  required
                />

                <input
                  class="form-control"
                  type="hidden"
                  placeholder="Name"
                  id="example-text-input"
                  name="name"
                  value="<%= subAdmin.name %>"
                  required
                />

                <input
                  class="form-control"
                  type="hidden"
                  name="id"
                  value="<%= subAdmin.id %>"
                  required
                />

                <button type="submit" class="btn btn-primary mb-3">
                  Update Password
                </button>
              </form>
            </div>
          </div>
        </div>
        <!-- basic form end -->
        <!-- main content area end -->
      </div>
    </div>
  </div>
</div>
