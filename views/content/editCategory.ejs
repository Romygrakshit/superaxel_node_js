<div class="main-content-inner">
  <div class="row">
    <div class="col-lg-6 col-ml-12">
      <div class="row">
        <!-- Textual inputs start -->
        <div class="col-12 mt-5">
          <div class="card">
            <div class="card-body">
              <form action="/categories/edit?_method=PUT" method="post">
                <div class="form-group">
                  <h4 class="header-title">
                    Edit Category:<%= category_name.category_name %>
                  </h4>
                  <label class="col-form-label">Category Name</label>
                  <input
                    class="form-control"
                    type="text"
                    placeholder="Name"
                    name="category_name"
                    value="<%= category_name.category_name %>"
                    required
                  />
                </div>

                <div class="form-group">
                  <input
                    class="form-control"
                    type="hidden"
                    placeholder="order_number"
                    name="id"
                    value="<%= category_name.id %>"
                  />
                </div>
                <button class="btn btn-primary mb-3">Update Category</button>
              </form>
            </div>
          </div>
        </div>
        <!-- Textual inputs end -->

        <!-- main content area end -->
      </div>
    </div>
  </div>
</div>
