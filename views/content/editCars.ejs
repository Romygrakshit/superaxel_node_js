<div class="main-content-inner">
  <div class="row">
    <div class="col-lg-6 col-ml-12">
      <div class="row">
        <!-- Textual inputs start -->
        <div class="col-12 mt-5">
          <div class="card">
            <div class="card-body">
              <form action="/cars/edit?_method=PUT" method="post">
                <div class="form-group">
                  <h4 class="header-title">Edit Car:<%= car.car_name %></h4>
                  <label class="col-form-label">Car Name</label>
                  <input
                    class="form-control"
                    type="text"
                    placeholder="Name"
                    name="car_name"
                    value="<%= car.car_name %>"
                    required
                  />
                </div>

                <div class="form-group">
                  <input
                    class="form-control"
                    type="hidden"
                    placeholder="order_number"
                    name="id"
                    value="<%= car.car_id %>"
                  />
                </div>

                <div class="form-group">
                  <label for="Select"
                    >Select Company (if not in list add company first):</label
                  >
                  <select name="company" id="Select" class="form-control">
                    <option><%= car.company %></option>
                    <% company.forEach((row) => { %>
                    <option><%= row.company %></option>

                    <% }); %>
                  </select>
                </div>
                
                <button class="btn btn-primary mb-3">Update Car</button>
              </form>
            </div>
          </div>

        <!-- main content area end -->
      </div>
    </div>
  </div>
</div>
