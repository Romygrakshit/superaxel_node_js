<div class="main-content-inner">
  <div class="row">
    <div class="col-lg-6 col-ml-12">
      <div class="row">
        <!-- Textual inputs start -->
        <div class="col-12 mt-5">
          <div class="card">
            <div class="card-body">
              <form action="/cars/edit?_method=PUT" method="post">
                <div class="form-group">
                  <h4 class="header-title">Edit Car:<%= car.name %></h4>
                  <label class="col-form-label">Car Name</label>
                  <input
                    class="form-control"
                    type="text"
                    placeholder="Name"
                    name="name"
                    value="<%= car.car_name %>"
                    required
                  />
                </div>

                <div class="form-group">
                  <label for="Select"
                    >Select Company (if not in list add company first):</label
                  >
                  <select name="company" id="Select" class="form-control">
                    <option><%= car.company %></option>
                    <% company.forEach((row) => { %>
                    <option><%= row.company %></option>

                    <% }); %>
                  </select>
                </div>
                <div class="form-group">
                  <label for="example-text-input" class="col-form-label"
                    >left_axel_price</label
                  >
                  <input
                    class="form-control"
                    type="text"
                    placeholder="Left Axel Price"
                    name="left_axel_price"
                    value="<%= car.left_axel_price %>"
                    required
                  />
                </div>
                <div class="form-group">
                  <label for="example-text-input" class="col-form-label"
                    >Right Axel Price</label
                  >
                  <input
                    class="form-control"
                    type="text"
                    placeholder="Right Axel Price"
                    name="right_axel_price"
                    value="<%= car.right_axel_price %>"
                    required
                  />
                  <input
                    class="form-control"
                    type="hidden"
                    placeholder="order_number"
                    name="id"
                    value="<%= car.id %>"
                  />
                </div>
                <button class="btn btn-primary mb-3">Update Car</button>
              </form>
            </div>
          </div>
          <div class="col-12 mt-5">
            <div class="card">
              <div class="card-body">
                <form action="/cars/update/inventory?_method=PUT" method="post">
                  <div class="form-group">
                    <label for="example-text-input" class="col-form-label"
                      >Inventory</label
                    >
                    <input
                      class="form-control"
                      type="text"
                      placeholder="Left Inventory"
                      name="left_inventory"
                      value="<%= car.left_inventory %>"
                      required
                    />
                    <input
                      class="form-control"
                      type="text"
                      placeholder="Right Inventory"
                      name="right_inventory"
                      value="<%= car.right_inventory %>"
                      required
                    />
                    <input
                      class="form-control"
                      type="hidden"
                      placeholder="order_number"
                      name="id"
                      value="<%= car.car_id %>"
                    />
                  </div>
                  <button class="btn btn-primary mb-3">Update Inventory</button>
                </form>
              </div>
            </div>
          </div>
        </div>
        <!-- Textual inputs end -->

        <!-- main content area end -->
      </div>
    </div>
  </div>
</div>
