<div class="main-content-inner">
  <div class="row">
    <div class="col-lg-6 col-ml-12">
      <div class="row">
        <!-- Textual inputs start -->
        <div class="col-12 mt-5">
          <div class="card">
            <div class="card-body">
              <% if(typeof alert != 'undefined') { %> <%
              alert.forEach(function(error) { %>
              <div
                class="alert alert-warning alert-dismissible fade show"
                role="alert"
              >
                <%= error.msg %>
                <button
                  type="button"
                  class="close"
                  data-dismiss="alert"
                  aria-label="Close"
                >
                  <span aria-hidden="true">Ã—</span>
                </button>
              </div>
              <% }) %> <% } %>
              <form action="/subadmins/register" method="post">
                <div class="form-group">
                  <h4 class="header-title">Add New SubAdmin</h4>
                  <label class="col-form-label">Name</label>
                  <input
                    class="form-control"
                    type="text"
                    placeholder="Name"
                    id="example-text-input"
                    name="name"
                    required
                  />
                </div>
                <div class="form-group">
                  <label for="inputPassword" class="">Password</label>
                  <input
                    type="text"
                    class="form-control"
                    id="inputPassword"
                    name="password"
                    placeholder="Password"
                    required
                  />
                </div>
                <div class="form-group">
                  <label for="Select">Select State:</label>
                  <select name="state" id="Select" class="form-control">
                    <% states.forEach((row) => { %>
                    <option><%= row.state %></option>

                    <% }); %>
                  </select>
                </div>

                <div class="form-group">
                  <label for="example-tel-input" class="col-form-label"
                    >Mobile Numbers</label
                  >
                  <input
                    class="form-control"
                    type="tel"
                    placeholder="Mobile Number"
                    name="mobile_number"
                    id="example-tel-input"
                    required
                  />
                </div>
                <button class="btn btn-primary mb-3">Add SubAdmin</button>
              </form>
            </div>
          </div>
        </div>
        <!-- Textual inputs end -->

        <!-- main content area end -->
      </div>
    </div>
  </div>
</div>
