<div class="main-content-inner">
  <div class="row">
    <div class="col-lg-6 col-ml-12">
      <div class="row chan">
        <!-- Textual inputs start -->
        <div class="col-12 mt-5">
          <div class="card">
            <div class="card-body">
              <form action="/products/add-inventory" method="post">
                <div class="form-group">
                  <h4 class="header-title">Add Product Inventory</h4>
                  <input type="hidden" name="company_id" value="<%= company_id %>">
                  <input type="hidden" name="car_id" value="<%= car_id %>">
                </div>
                <div class="form-group">
                  <label for="subadmin_id">Select Subadmin ID:</label>
                  <select name="subadmin_id" id="subadmin_id" class="form-control">
                    <% subadmin.forEach((row) => { %>
                      <option value="<%= row.id %>"><%= row.name %></option>
                      <% }); %>
                    </select>
                </div>
                <div class="form-group">
                  <label for="inventory">Inventory:</label>
                  <input class="form-control" type="text" name="inventory" id="inventory" required>
                </div>
                <button class="btn btn-primary mb-3">Add Inventory</button>
              </form>
            </div>
          </div>
        </div>
        <!-- Textual inputs end -->
        <!-- main content area end -->
      </div>
    </div>
  </div>
</div>
