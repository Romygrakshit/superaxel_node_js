<div class="main-content-inner">
  <div class="row">
    <div class="col-lg-6 col-ml-12">
      <div class="row chan">
        <!-- Textual inputs start -->
        <div class="col-12 mt-5">
          <div class="card">
            <div class="card-body">
              <form action="/users/edit?_method=PUT" method="post">
                <div class="form-group">
                  <h4 class="header-title">Edit User: <%= user.name %></h4>

                  <label class="col-form-label">Name</label>
                  <input
                    class="form-control"
                    type="text"
                    placeholder="Name"
                    id="example-text-input"
                    name="name"
                    value="<%= user.name %>"
                    required
                  />
                </div>
                <div class="form-group">
                  <!-- <label for="inputPassword" class="">ID</label> -->
                  <input
                    type="hidden"
                    class="form-control"
                    name="id"
                    value="<%= user.id %>"
                    required
                  />
                </div>
                <div class="form-group">
                  <label for="example-text-input" class="col-form-label"
                    >Email</label
                  >
                  <input
                    class="form-control"
                    type="email"
                    placeholder="Email"
                    name="email"
                    value="<%= user.email %>"
                    id="example-text-input"
                    required
                  />
                </div>
                <div class="form-group">
                  <label for="example-text-input" class="col-form-label"
                    >Age</label
                  >
                  <input
                    class="form-control"
                    type="number"
                    placeholder="Age"
                    name="age"
                    value="<%= user.age %>"
                    id="example-text-input"
                    required
                  />
                </div>

                <div class="form-group">
                  <label for="example-tel-input" class="col-form-label"
                    >Mobile Numbers</label
                  >
                  <input
                    class="form-control"
                    type="tel"
                    placeholder="Mobile Number"
                    name="mobile_number"
                    id="example-tel-input"
                    value="<%= user.mobile_number %>"
                    required
                  />
                </div>
                <button class="btn btn-primary mb-3">Save</button>
              </form>
            </div>
          </div>
        </div>
        <!-- Textual inputs end -->
        <!-- Update Password -->
        <div class="col-12 mt-5">
          <div class="card">
            <div class="card-body">
              <h4 class="header-title">
                Update Password for: <%= user.name %>
              </h4>
              <form action="/users/edit?_method=PUT" method="post">
                <div class="form-group">
                  <label for="exampleInputEmail1">Write New Password:</label>
                  <input
                    type="text"
                    class="form-control"
                    name="Password"
                    placeholder="Password"
                  />
                </div>

                <input
                  class="form-control"
                  type="hidden"
                  placeholder="Email"
                  name="email"
                  value="<%= user.email %>"
                  id="example-text-input"
                  required
                />

                <input
                  class="form-control"
                  type="hidden"
                  placeholder="Age"
                  name="age"
                  value="<%= user.age %>"
                  id="example-text-input"
                  required
                />

                <input
                  class="form-control"
                  type="hidden"
                  placeholder="Mobile Number"
                  name="mobile_number"
                  id="example-tel-input"
                  value="<%= user.mobile_number %>"
                  required
                />

                <input
                  class="form-control"
                  type="hidden"
                  placeholder="Name"
                  id="example-text-input"
                  name="name"
                  value="<%= user.name %>"
                  required
                />

                <input
                  class="form-control"
                  type="hidden"
                  name="id"
                  value="<%= user.id %>"
                  required
                />

                <button type="submit" class="btn btn-primary mb-3">
                  Update Password
                </button>
              </form>
            </div>
          </div>
        </div>
        <!-- basic form end -->
        <!-- main content area end -->
      </div>
    </div>
  </div>
</div>
